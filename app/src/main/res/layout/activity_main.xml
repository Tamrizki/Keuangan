<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.mainPage.MainActivity">
    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey"
        android:padding="25dp">
        <TextView
            android:id="@+id/tvHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/typoBigBold"
            android:textColor="@color/blackLess"
            android:hint="Hello There, "
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvTambahCatatn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="45dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:background="@drawable/custom_bg_45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackLess"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/tambah_catatan"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_below="@+id/llTop"
        android:layout_above="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="25dp"
        />
    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:paddingVertical="15dp"
            android:background="@color/blue">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saldo_saat_ini"
                android:textColor="@color/white"
                style="@style/typoNormal"/>
            <TextView
                android:id="@+id/tvSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/typoNormal"
                android:hint="Rp.1000000"
                android:textColorHint="@color/white"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llExpand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:paddingVertical="15dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2"
            android:background="@color/grey">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/typoSmall"
                    android:text="Total Pemasukan"
                    android:textColor="@color/blackLess"/>
                <TextView
                    android:id="@+id/tvPemasukan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/typoSmall"
                    android:hint="Rp. 1000000"
                    android:textColor="@color/blackLess"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/typoSmall"
                    android:layout_gravity="end"
                    android:text="Total Pengeluaran"
                    android:textColor="@color/blackLess"/>
                <TextView
                    android:id="@+id/tvPengeluaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    style="@style/typoSmall"
                    android:hint="Rp. 1000000"
                    android:textColor="@color/blackLess"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>